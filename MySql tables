//MySql tables
CREATE TABLE MAIN_BILL (INVOICE_NO INT AUTO_INCREMENT PRIMARY KEY,RESTAURANT_BILL DOUBLE(10,2),RESTAURANT_GST DOUBLE(10,2),
ROOM_BILL_TOTAL DOUBLE(10,2),ROOM_GST DOUBLE(10,2),PAYABLE_AMOUNT DOUBLE(10,2),DISCOUNT DOUBLE(10,2),RECEIVED_AMOUNT DOUBLE(10,2),
BILL_DATE DATE,BILL_TIME TIME);


CREATE TABLE CUSTOMER(BILL_NO INT(10),FIRST_NAME VARCHAR(30),
LAST_NAME VARCHAR(30),ADDRESS VARCHAR(50),MOBILE_NO INT (12),CHECK_IN DATE,CHECK_OUT DATE),CUSTOMER_TYPE VARCHAR(20);

ALTER TABLE CUSTOMER 
ADD  FOREIGN KEY(BILL_NO) REFERENCES MAIN_BILL(INVOICE_NO);

CREATE TABLE HOTEL ( BILL_NO INT(10), ROOM_NO INT (4),NO_OF_NIGHT INT(3),SUBTOTAL DOUBLE(10,2),
GST DOUBLE(10,2),LINE_TOTAL DOUBLE(10,2),BILL_DATE DATE,BILL_TIME TIME,FOREIGN KEY (BILL_NO) REFERENCES MAIN_BILL(INVOICE_NO));


